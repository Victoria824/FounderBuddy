app = 'chat-agent-y6oijw'
primary_region = 'yyz'

[build]

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = false
  auto_start_machines = true
  min_machines_running = 1
  processes = ['app']

  [[http_service.checks]]
    type = "http"
    interval = "15s"
    timeout = "10s"
    grace_period = "30s"
    path = "/info"

[[vm]]
  memory = '1gb'
  cpu_kind = 'shared'
  cpus = 1

[env]
  PORT = "8080"

[[statics]]
  guest_path = "/app/static"
  url_prefix = "/static/"
